Vagrant.configure("2") do |config|
    config.vm.box = "bento/ubuntu-24.04"

    config.vm.define "mjameauS" do |control|
        control.vm.hostname = "mjameauS"
        control.vm.network "private_network", ip: "192.168.56.110"
        control.vm.provider "virtualbox" do |vbS|
            vbS.memory = 1024
            vbS.cpus = 1
        end
        control.vm.provision "shell", path:"scripts/install_k3s_server.sh"
        control.vm.provision "shell", inline: "echo Bringing machine mjameauS up with virtualbox provider"
    end
   config.vm.define "mjameauSW" do |control|
        control.vm.hostname = "mjameauSW"
        control.vm.network "private_network", ip: "192.168.56.111"
        control.vm.provider "virtualbox" do |vbSW|
            vbSW.memory = 1024
            vbSW.cpus = 1
        end
        control.vm.provision "shell", path:"scripts/install_k3s_agent.sh"
        control.vm.provision "shell", inline: "echo Bringing machine mjameauSW up with virtualbox provider"
    end
end
